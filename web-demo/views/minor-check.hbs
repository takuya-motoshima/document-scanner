{{!< default}}
{{#contentFor 'title'}}未成年チェック{{/contentFor}}
{{#contentFor 'description'}}身分証明証の生年月日から未成年を判定{{/contentFor}}
{{#contentFor 'style'}}<link rel="stylesheet" type="text/css" href="{{cache_busting '/build/minorCheck.css' ''}}">{{/contentFor}}
{{#contentFor 'script'}}<script type="module" src="{{cache_busting '/build/minorCheck.js' ''}}"></script>{{/contentFor}}
<div class="card">
  <div class="card-header pt-5">
    <div class="card-toolbar">
      <!--begin::Perform check-->
      <button data-on-check type="button" class="btn btn-primary mb-10 mb-lg-0 d-block d-lg-inline-block me-10">未成年チェックを実行</button>
      <!--end::Perform check-->

      <!--begin::File upload-->
      <label class="btn btn-primary mb-10 mb-lg-0 d-block d-lg-inline-block me-0 me-lg-10">
        <!--begin::Svg Icon | path: /var/www/preview.keenthemes.com/kt-products/metronic/releases/2022-07-05-142712/core/html/src/media/icons/duotune/files/fil010.svg-->
        <span class="svg-icon svg-icon-1 svg-icon-white"><svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path opacity="0.3" d="M19 22H5C4.4 22 4 21.6 4 21V3C4 2.4 4.4 2 5 2H14L20 8V21C20 21.6 19.6 22 19 22ZM14.5 12L12.7 9.3C12.3 8.9 11.7 8.9 11.3 9.3L10 12H11.5V17C11.5 17.6 11.4 18 12 18C12.6 18 12.5 17.6 12.5 17V12H14.5Z" fill="currentColor"/>
          <path d="M13 11.5V17.9355C13 18.2742 12.6 19 12 19C11.4 19 11 18.2742 11 17.9355V11.5H13Z" fill="currentColor"/>
          <path d="M8.2575 11.4411C7.82942 11.8015 8.08434 12.5 8.64398 12.5H15.356C15.9157 12.5 16.1706 11.8015 15.7425 11.4411L12.4375 8.65789C12.1875 8.44737 11.8125 8.44737 11.5625 8.65789L8.2575 11.4411Z" fill="currentColor"/>
          <path d="M15 8H20L14 2V7C14 7.6 14.4 8 15 8Z" fill="currentColor"/>
        </svg></span>
        <!--end::Svg Icon-->
        画像をアップロード
        <input data-on-upload-file type="file" class="d-none" accept="image/*">
      </label>
      <!--end::File upload-->

      <!--begin::Input group-->
      <div class="d-flex">
        <div class="form-check form-check-custom form-check-success form-check-solid me-10">
          <input data-ref="type" data-on-change-type class="form-check-input" type="radio" name="type" value="lic" id="typeLic" checked />
          <label class="form-check-label" for="typeLic">運転免許証</label>
        </div>
        <div class="form-check form-check-custom form-check-success form-check-solid">
          <input data-ref="type" data-on-change-type class="form-check-input" type="radio" name="type" value="myno" id="typeMynumber" />
          <label class="form-check-label" for="typeMynumber">マイナンバーカード</label>
        </div>
      </div>
      <!--end::Input group-->
    </div>
  </div>
  <div class="card-body {{!-- p-0 --}} pt-6">
    <!--begin::Image-->
    <div class="d-flex justify-content-center">
      <img data-ref="image" src="/build/media/driverslicense.png" class="mw-100">
    </div>
    <!--end::Image-->
  </div>
</div>